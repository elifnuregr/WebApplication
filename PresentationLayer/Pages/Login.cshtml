@page "/"
@model LoginModel
@{
    Layout = "_Layout_Initial";
}
<link href="~/css/custom.css" rel="stylesheet" />
<script src="~/js/custom.js"></script>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <section>
                        <form id="account" method="post">
                            <h2 class="text-center">Log In</h2>
                            <hr />
                            <div id="error-message" asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="login.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="username" />
                                <label asp-for="login.UserName" class="form-label">User Name</label>
                                <span asp-validation-for="login.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="login.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="login.Password" class="form-label">Password</label>
                                <span asp-validation-for="login.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox mb-3">
                                <label asp-for="login.RememberMe" class="form-label">Remember me</label>
                                <input class="form-check-input" asp-for="login.RememberMe" />
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                            </div>
                            <div>
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <a asp-page="./Register">Register as a new user</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>